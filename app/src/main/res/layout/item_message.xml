<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <com.lzx.guanchajava.view.widget.UrlImageView
        android:id="@+id/message_pic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:textColor="@color/textColor"
            android:background="@color/colorArticleBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        android:textColor="@color/textColor"
            android:background="@color/colorArticleBackground"
        app:layout_constraintEnd_toStartOf="@+id/message_time"
        app:layout_constraintStart_toEndOf="@+id/message_pic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:lines="1"
        android:textSize="14sp"
        android:textColor="@color/textColor"
            android:background="@color/colorArticleBackground"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/message_pic"
        app:layout_constraintTop_toBottomOf="@+id/message_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/atten_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <com.lzx.guanchajava.view.widget.UrlImageView
        android:id="@+id/atten_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/atten_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textColor="@color/textColor"
        android:background="@color/colorArticleBackground"
        app:layout_constraintEnd_toStartOf="@+id/atten_paid"
        app:layout_constraintStart_toEndOf="@+id/atten_pic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/atten_paid"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="关注"
        android:textColor="@color/textColor"
        android:background="@color/colorArticleBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/atten_des"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="@color/textColor"
            android:background="@color/colorArticleBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/atten_paid"
        app:layout_constraintStart_toEndOf="@+id/atten_pic"
        app:layout_constraintTop_toBottomOf="@+id/atten_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
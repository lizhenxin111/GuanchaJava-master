<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorArticleBackground">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/base_nav_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabBackground="@color/tab_background"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/black_overlay" />

    <com.lzx.guanchajava.view.widget.ScrollViewPager
        android:id="@+id/base_nav_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="4dp"/>

</LinearLayout>
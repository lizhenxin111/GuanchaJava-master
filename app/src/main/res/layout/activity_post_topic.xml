<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.PostTopicActivity">

    <com.lzx.guanchajava.view.widget.UrlImageView
        android:id="@+id/post_pic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/post_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/textColor"
        android:background="@color/colorArticleBackground"
        app:layout_constraintStart_toEndOf="@+id/post_pic"
        app:layout_constraintTop_toTopOf="@+id/post_pic" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/post_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/textColor"
        android:background="@color/colorArticleBackground"
        app:layout_constraintBottom_toBottomOf="@+id/post_pic"
        app:layout_constraintStart_toEndOf="@+id/post_pic" />

    <FrameLayout
        android:id="@+id/post_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_pic" />



</androidx.constraintlayout.widget.ConstraintLayout>